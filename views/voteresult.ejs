<!DOCTYPE html>
<h1>投票结果</h1>
<form class="form-horizontal" action="/voteresult" method="post">
  <fieldset>
     <table class="table table-bordered">
  <caption class="lead">候选人列表</caption>
  <tr>
    <div class="span1">
      <th>候选人名字</th>
      <th>候选人地址</th>
      <th>票数</th>
    </div>
  </tr>
<% for(i=0;i<candidates.length;i++) { %>
<tr>
      <div class="span1">
       <td><%= candidates[i].name%></td>
       <td><%= candidates[i].address%></td>
       <td><%= Math.ceil(candidates[i].vote)%></td> 
      </div>
    </tr>
<%}%>
</table>
 
  </fieldset>
</form>


<table align="center">
<tr>

<td>
<div align="center">
<form  action="/votestart" method="post">     
<input type="submit" onclick="confir2()" value="开启投票" class="btn btn-primary">
</form>
</div>
</td>

<td>
<div align="left">
<form  action="/votestop" method="post">     
<input type="submit" onclick="confir1()" value="结束投票" class="btn btn-primary">
</form>
</div>
</td>

</tr>
</table>


<script type="text/javascript">
 function confir1() {					
     if(window.confirm("选民将无法投票,确定吗？")){				
	 window.location.href="/voteresult";				
	}
				
   }

 function confir2() {					
     if(window.confirm("选民可以开始投票,确定吗？")){				
	 window.location.href="/voteresult";				
	}
				
   }
</script>

